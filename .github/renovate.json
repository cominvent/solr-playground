{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["gradle", "pip_requirements"],
  "gradle": {
    "fileMatch": ["^_versions.lock$", "^_versions.props$"]
  },
  "ignorePaths": ["gradle/**", "solr/**", "buildSrc/**", "dev-docs/solr-missing-doclet/**", "settings.gradle"],
  "regexManagers": [
    {
      "fileMatch": ["^versions.props$"],
      "matchStrings": ["^(?<depName>.*?)=(?<currentValue>.*)$"],
      "datasourceTemplate": "maven"
    },
    {
      "fileMatch": ["^versions.lock$"],
      "matchStrings": ["(?<depName>.*?)=(?<currentValue>.*?) .*$"],
      "datasourceTemplate": "maven"
    }
  ]
}
